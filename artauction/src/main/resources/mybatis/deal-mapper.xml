<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="deal">
	<select id="sequence" resultType="int">
		select deal_seq.nextval from dual
	</select>
	<insert id="insert">
		insert into deal (
			deal_no, bid_no, deal_buyer, deal_time, deal_price,
			deal_status
		) values(
			deal_seq.nextval, #{bidNo}, #{dealBuyer}, #{dealTime},
			#{dealPrice}, #{dealStatus}
		)
	</insert>
	<select id="getList" resultType="DealDto">
		select * from deal
	</select>
	<select id="getListByBidNo" resultType="DealDto">
		select * from deal where bid_no=#{bidNo}
	</select>
	<select id="getOneByDealNo" resultType="DealDto">
		select * from deal where deal_no = #{dealNo}
	</select>
</mapper>